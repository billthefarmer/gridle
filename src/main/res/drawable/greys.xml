<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <shape>

      <corners
          android:radius="5dp" />

      <solid
          android:color="?attr/box_bgcolour" />

      <size
          android:width="240dp"
          android:height="40dp" />

    </shape>
  </item>

  <item>
    <shape>

      <corners
          android:radius="5dp" />

      <gradient
          android:angle="0"
          android:endColor="#ffffffff"
          android:startColor="#00ffffff"
          android:type="linear" />

      <size
          android:width="240dp"
          android:height="40dp" />

    </shape>
  </item>

</layer-list>
